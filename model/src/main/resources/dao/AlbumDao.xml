<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
 xmlns="http://www.ontimize.com/schema/jdbc"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
 catalog="" schema="${mainschema}" table="album"
 datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
 <DeleteKeys>
 	<Column>album_id</Column>
 </DeleteKeys>
 <UpdateKeys>
	<Column>album_id</Column>
 </UpdateKeys>
 	<GeneratedKey>album_id</GeneratedKey>
	<Queries>
		<Query id="newestAlbums">
			<AmbiguousColumns>
				<AmbiguousColumn name="album_id" prefix="a"/>
			</AmbiguousColumns>
			<Sentence>
				<![CDATA[
				SELECT
					#COLUMNS#
				FROM
					${mainschema}.ALBUM a
				#WHERE#
				order by a.creation_date desc
				]]>
			</Sentence>
		</Query>
		<Query id = "albumArtist">
		<Sentence>
		<![CDATA[
			SELECT
				#COLUMNS#
			FROM
				${mainschema}.album a
			#WHERE#
		]]>
		</Sentence>
		</Query>
		
		<Query id = "searchAlbum">
		<Sentence>
		<![CDATA[
			SELECT
				#COLUMNS#
			FROM
				${mainschema}.album a
				INNER JOIN artist ar 
			#WHERE#
		]]>
		</Sentence>
		</Query>
		<Query id = "albumSongs">
		<AmbiguousColumns>
			<AmbiguousColumn name="artist_id" prefix="ar"/>
			<AmbiguousColumn name="song_id" prefix="s"/>
			<AmbiguousColumn name="album_id" prefix="a"/>
		</AmbiguousColumns>
		<Sentence>
		<![CDATA[
			SELECT
				#COLUMNS#
			FROM
				${mainschema}.ALBUM a
				INNER JOIN album_song als ON als.album_id = a.album_id
				INNER JOIN song s on s.song_id = als.song_id
				INNER JOIN artist ar on ar.artist_id = a.artist_id
			#WHERE#
			ORDER BY als.track_number asc
		]]>
		</Sentence>
		</Query>
	</Queries>
</JdbcEntitySetup>